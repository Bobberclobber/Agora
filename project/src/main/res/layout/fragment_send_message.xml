<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="se.liu.ida.josfa969.tddd80.fragments.SendMessageFragment">

    <Button
        android:id="@+id/send_message_button"
        android:text="@string/send_button_text"
        android:layout_width="@dimen/small_button_width"
        android:layout_height="@dimen/small_button_height"
        android:layout_marginTop="@dimen/small_internal_margin"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <EditText
        android:id="@+id/send_message_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/message_field_height"
        android:layout_marginTop="@dimen/small_internal_margin"
        android:layout_above="@id/send_message_button"
        android:inputType="text"/>

    <TextView
        android:id="@+id/to_recipient"
        android:text="@string/message_recipient_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/send_message_input"/>

    <TextView
        android:id="@+id/message_recipient"
        android:text="Recipient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_internal_margin"
        android:layout_toRightOf="@id/to_recipient"
        android:layout_above="@id/send_message_input"/>

</RelativeLayout>
