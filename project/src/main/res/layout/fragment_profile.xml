<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="se.liu.ida.josfa969.tddd80.fragments.ProfileFragment">

    <ImageButton
        android:id="@+id/profile_settings_button"
        android:layout_width="@dimen/profile_settings_button_side"
        android:layout_height="@dimen/profile_settings_button_side"
        android:contentDescription="@string/profile_settings_description" />

    <Button
        android:id="@+id/post_button"
        android:layout_width="@dimen/profile_button_width"
        android:layout_height="@dimen/profile_button_height"
        android:layout_toRightOf="@id/profile_settings_button"
        android:text="@string/post_button_text"/>

    <Button
        android:id="@+id/find_button"
        android:layout_width="@dimen/profile_button_width"
        android:layout_height="@dimen/profile_button_height"
        android:layout_toRightOf="@id/post_button"
        android:text="@string/find_button_text"/>

    <ImageButton
        android:id="@+id/options_button"
        android:layout_width="@dimen/profile_settings_button_side"
        android:layout_height="@dimen/profile_settings_button_side"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/options_description" />

</RelativeLayout>
