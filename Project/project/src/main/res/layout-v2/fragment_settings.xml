<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.liu.ida.josfa969.tddd80.fragments_v2.SettingsFragment">

    <EditText
        android:id="@+id/username_association_input"
        android:layout_width="@dimen/username_input_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/large_internal_margin"
        android:inputType="textEmailAddress"/>

    <TextView
        android:id="@+id/username_association_label"
        android:text="@string/username_association_label_text"
        android:textSize="@dimen/large_text_size"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/username_association_input"/>

    <Button
        android:id="@+id/username_association_button"
        android:text="@string/username_association_button_text"
        android:layout_width="@dimen/small_button_width"
        android:layout_height="@dimen/small_button_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/large_internal_margin"
        android:layout_below="@id/username_association_input"/>

</RelativeLayout>
