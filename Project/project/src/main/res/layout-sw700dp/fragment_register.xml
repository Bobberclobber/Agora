<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="se.liu.ida.josfa969.tddd80.fragments.RegisterFragment">

    <TextView
        android:id="@+id/register_title"
        android:text="@string/register_screen_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/large_title_text_size"/>


    <Space
        android:id="@+id/register_fragment_middle_space"
        android:layout_width="@dimen/register_fragment_space_width"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"/>


    <!-- First name input field -->
    <EditText
        android:id="@+id/user_name_input_field"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_field_height"
        android:layout_marginLeft="@dimen/small_internal_margin"
        android:layout_marginTop="@dimen/input_field_margin"
        android:layout_below="@id/register_title"
        android:layout_alignStart="@id/register_fragment_middle_space"
        android:layout_alignEnd="@id/register_fragment_middle_space"
        android:inputType="textAutoComplete" />

    <TextView
        android:id="@+id/user_name_input_text"
        android:text="@string/user_name_input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/user_name_input_field"
        android:layout_alignBottom="@id/user_name_input_field"
        android:textSize="@dimen/input_text_size"/>


    <!-- Last name input field -->
    <EditText
        android:id="@+id/password_input_field"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_field_height"
        android:layout_marginLeft="@dimen/small_internal_margin"
        android:layout_marginTop="@dimen/input_field_margin"
        android:layout_below="@id/user_name_input_field"
        android:layout_alignStart="@id/register_fragment_middle_space"
        android:layout_alignEnd="@id/register_fragment_middle_space"
        android:inputType="textAutoComplete" />

    <TextView
        android:id="@+id/password_input_text"
        android:text="@string/password_input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/user_name_input_text"
        android:layout_alignBottom="@id/password_input_field"
        android:textSize="@dimen/input_text_size"/>


    <!-- E-mail input field -->
    <EditText
        android:id="@+id/email_input_field"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_field_height"
        android:layout_marginLeft="@dimen/small_internal_margin"
        android:layout_marginTop="@dimen/input_field_margin"
        android:layout_below="@id/password_input_field"
        android:layout_alignStart="@id/register_fragment_middle_space"
        android:layout_alignEnd="@id/register_fragment_middle_space"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/email_input_text"
        android:text="@string/email_input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/user_name_input_text"
        android:layout_alignBottom="@id/email_input_field"
        android:textSize="@dimen/input_text_size"/>


    <!-- Country input field -->
    <EditText
        android:id="@+id/country_input_field"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_field_height"
        android:layout_marginLeft="@dimen/small_internal_margin"
        android:layout_marginTop="@dimen/input_field_margin"
        android:layout_below="@id/email_input_field"
        android:layout_alignStart="@id/register_fragment_middle_space"
        android:layout_alignEnd="@id/register_fragment_middle_space"
        android:inputType="textAutoComplete" />

    <TextView
        android:id="@+id/country_input_text"
        android:text="@string/country_input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/user_name_input_text"
        android:layout_alignBottom="@id/country_input_field"
        android:textSize="@dimen/input_text_size"/>


    <!-- City input field -->
    <EditText
        android:id="@+id/city_input_field"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_field_height"
        android:layout_marginLeft="@dimen/small_internal_margin"
        android:layout_marginTop="@dimen/input_field_margin"
        android:layout_below="@id/country_input_field"
        android:layout_alignStart="@id/register_fragment_middle_space"
        android:layout_alignEnd="@id/register_fragment_middle_space"
        android:inputType="textAutoComplete" />

    <TextView
        android:id="@+id/city_input_text"
        android:text="@string/city_input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/user_name_input_text"
        android:layout_alignBottom="@id/city_input_field"
        android:textSize="@dimen/input_text_size"/>


    <!-- Completion button -->
    <Button
        android:text="@string/complete_button_text"
        android:layout_width="@dimen/large_button_width"
        android:layout_height="@dimen/large_button_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/large_internal_margin"
        android:layout_below="@id/city_input_field"/>

</RelativeLayout>
